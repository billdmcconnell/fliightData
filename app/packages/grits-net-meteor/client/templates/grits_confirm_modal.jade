template(name="gritsConfirmModal")
  .confirm--modal.modal.fade(tabindex='-1', role='dialog')
    .modal-dialog
      .modal-content
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          i.fa.fa-times-circle(aria-hidden='true')
        .modal-header
          h1 Load all flights?

        .modal-body
          p It could take a long time to load all #[b #{totalRecords}] flights for this query.

        .modal-footer
          button.btn.btn-confirm.load-all Load all flights
          button.btn.btn-default.cancel Show limited results
