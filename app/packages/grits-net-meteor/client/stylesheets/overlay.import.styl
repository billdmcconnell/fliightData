.font-awesome
  font-family FontAwesome
  -webkit-font-smoothing antialiased

.grits-overlay
  position fixed
  width 100%
  height 100%
  top 0
  z-index 10001
  display block
  background-color rgba(255,255,255,1)
  opacity 0
  transition opacity .5s
  &.grits-overlay--visible
    opacity 1 !important
  &.grits-overlay--hidden
    display none

.spinner
  position absolute
  top 40%
  left 50%
  transform translate(-50%, -40%)
  text-align center

  img
    height 262px
    width 244px
  p
    margin 0
    padding-left 5px
    text-transform uppercase
    font-size 2em
    color $m-gray

#filterLoading
  width 100%
  background-color rgba(255,255,255,.8)
  position fixed
  padding 0
  margin 0
  top 0
  left 0
  width 100%
  height 100%
