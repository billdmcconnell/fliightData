.confirm--modal
  left 50%
  transform translate(-50%, 0)
  z-index 2001
  h1
    margin 0
    font-size 2em

  .modal-content
    background alpha(white, 90%)
    border-radius 4px
    .modal-footer
      text-align center
    .notify-slider
      padding 15px
      text-align center
      display none
  .close
    float none
    position absolute
    top 8px
    right 8px
  p
    font-size 1.2em
  + .modal-backdrop
    z-index 2000
