.sidebar
  box-shadow none

.sidebar-content
  background $whiteBG

.sidebar-tabs
  opacity 1
  background $blue-transparent
  &.right
    background linear-gradient(to right, rgba(255,0,0,0) 75% , $blue-transparent 25%)

#sidebar-plus-button
#sidebar-minus-button
  color white

.fa-white
  font-size 2em
  color white

.sidebar-zoom-in
  background #496c8a
  overflow hidden
  position absolute
  bottom 40px
  left 60px

.sidebar-zoom-out
  background #496c8a
  overflow hidden
  position absolute
  bottom 5px
  left 60px

.sidebar-zoom-out:hover
.sidebar-zoom-in:hover
  background #496c8a
  opacity .75

#sidebar
  height 100%
  overflow visible

.sidebar-pane
  width 100%
  height 100% /* positioning to bottom needs height propagated from body */

.sidebar-table--options
  display flex
  align-items center
  justify-content space-around
  padding .75em
  background alpha($l-gray, 95%)
  border-bottom 3px solid $border-gray
  min-height 55px
  .filter
    flex 0 0 50%
    margin-left auto

.number-of-passengers
  margin-top 20px
  margin-bottom 20px
  input
    position relative
    top 0
    left 0
    width 100%

.email-label
  font-size 95%

#notifyEmail
  margin-bottom 20px

.progress
  margin-top 5px
  height 10px
